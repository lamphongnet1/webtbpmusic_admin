@model IEnumerable<android.Models.Danhmuc>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DanhMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>DanhMuc</h1>

<p>
    <a asp-action="ThemDanhMucMoi">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDanhMuc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDanhMuc)
            </td>
            <td>
                    <a asp-action="SuaDanhMuc" asp-route-idDanhMuc="@item.IdDanhMuc">Edit</a> |
              
                    <a asp-action="XoaDanhMuc" asp-route-idDanhMuc="@item.IdDanhMuc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
