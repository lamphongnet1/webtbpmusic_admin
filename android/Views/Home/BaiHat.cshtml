@model IEnumerable<android.Models.Baihat>

@{
    ViewData["Title"] = "Bài hát";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Quản lý Bài hát</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Thêm CSS riêng của bạn vào đây -->
<link href="~/css/site.css" rel="stylesheet" />
<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ThemBaiHatMoi", "Home")'">
    Thêm mới bài hát
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                ID Danh mục
            </th>
            <th>
                Tên Bài hát
            </th>
            <th>
                Ngày phát hành
            </th>
            <th>
                Link Hình ảnh bài hát
            </th>
            <th style="max-width: 300px; word-wrap: break-word; white-space: normal;">
                Link nhạc bài hát
            </th>
            <th>
                ID Nghệ sĩ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDanhMuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenBaiHat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayPhatHanh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhBaiHat)
                </td>
                <td style="max-width: 300px; word-wrap: break-word; white-space: normal;">
                    @Html.DisplayFor(modelItem => item.LinkBaiHat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNgheSi)
                </td>
                <td style="height: auto; width: 100px;">
                    <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("SuaBaiHat", new { idBaiHat = item.IdBaiHat })'" style="height: auto; width: 100px; margin-bottom: 5px">
                        Chỉnh sửa
                    </button>

                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("XoaBaiHat", new { idBaiHat = item.IdBaiHat })'" style="height: auto; width: 100px;">
                        Xoá
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

</table>
